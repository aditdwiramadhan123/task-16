<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../assets/css/navbar.css" />
    <link rel="stylesheet" href="../assets/css/myProject.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>My Project</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>

  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-light p-nav">
      <a class="navbar-brand" href="#">
        <img
          src="../assets/image/image.png"
          alt="logo-dumbways"
          width="30"
          height="30"
          class="d-inline-block align-top"
        />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active text-black">
            <a class="nav-link font-weight-bold" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link color text-dark" href="/project">My Project</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="/testimoni">Testimoni</a>
          </li>
        </ul>
        {{#if isLogin}}
          <i class="mr-lg-2 ml-auto fa fa-user"></i>
          <span class="mr-lg-4 font-weight-bold">{{username}}</span>
          <form
            method="post"
            action="/logout"
            class="m-0 p-0 d-inline-block mr-3"
          >
            <button
              type="submit"
              class="btn btn-danger btn-sm m-0 w-100"
            >Logout</button>
          </form>
        {{else}}
          <a href="/login" class="mr-lg-3 ml-auto">Login</a>
        {{/if}}
        <a href="/contactMe" class=""><button
            class="btn btn-primary cont w-100 contactMe-button"
          >
            contact me
          </button></a>
      </div>
    </nav>

    <!-- main -->
    <div class="container">
      <h1>EDIT PROJECT</h1>

      <form action="/edit/{{data.id}}" id="formId" method="post" enctype="multipart/form-data">
        <div>
          <label for="projectName">project name</label>
          <input
            type="text"
            id="projectName"
            name="projectName"
            value="{{data.projectName}}"
          />
        </div>

        <!-- container date -->
        <div class="date-container">
          <div>
            <label for="startDate">start date</label>
            <input
              type="date"
              id="startDate"
              name="startDate"
              value="{{data.startDate}}"
            />
          </div>

          <div>
            <label for="endDate">end date</label>
            <input
              type="date"
              id="endDate"
              name="endDate"
              value="{{data.endDate}}"
            />
          </div>
        </div>

        <div>
          <label for="description">description</label>
          <textarea
            name="description"
            id="description"
            name="description"
          >{{data.description}}</textarea>
        </div>

        <!-- container ceckbox -->
        <div>
          <label>technologies</label>
          <div class="ceckboxContainer">
            <div>
              <input
                type="checkbox"
                id="nodeJs"
                value="node Js"
                name="nodeJs"
              />
              <label for="nodeJs">node js</label>
            </div>
            <div>
              <input
                type="checkbox"
                id="reactJs"
                value="react Js"
                name="reactJs"
              />
              <label for="reactJs">react js</label>
            </div>
            <div>
              <input
                type="checkbox"
                id="nextJs"
                value="next Js"
                name="nextJs"
              />
              <label for="nextJs">next js</label>
            </div>
            <div>
              <input
                type="checkbox"
                id="typeScript"
                value="typeScript"
                name="typeScript"
              />
              <label for="typeScript">TypeScript</label>
            </div>
          </div>
        </div>

        <div class="input-image">
          <input type="file" id="inputImage" class="input-box" name="image"/>
          <label for="inputImage"><i class="fa-solid fa-paperclip"></i></label>
        </div>

        <div class="containerButton">
          <button type="submit">submit</button>
          <!-- onclick="submitHandler()" -->
        </div>
      </form>
    </div>

    <script src="../assets/js/myProject.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    ></script>
  </body>
</html>