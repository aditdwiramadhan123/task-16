<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="assets/css/navbar.css" />
    <link rel="stylesheet" href="./assets/css/myProject.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>My Project</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>

  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-light p-nav">
      <a class="navbar-brand" href="#">
        <img
          src="assets/image/image.png"
          alt="logo-dumbways"
          width="30"
          height="30"
          class="d-inline-block align-top"
        />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active text-black">
            <a class="nav-link font-weight-bold" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link color text-dark" href="project"> My Project</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="testimoni">Testimoni</a>
          </li>
        </ul>
        {{#if isLogin}}
          <i class="mr-lg-2 ml-auto fa fa-user"></i>
          <span class="mr-lg-4 font-weight-bold">{{username}}</span>
          <form
            method="post"
            action="/logout"
            class="m-0 p-0 d-inline-block mr-3"
          >
            <button
              type="submit"
              class="btn btn-danger btn-sm m-0 w-100"
            >Logout</button>
          </form>
        {{else}}
          <a href="/login" class="mr-lg-3 ml-auto">Login</a>
        {{/if}}
        <a href="contactMe" class=""><button
            class="btn btn-primary cont w-100 contactMe-button"
          >
            contact me
          </button></a>
      </div>
    </nav>

    <!-- main -->
    <div class="container">

      {{#if isLogin}}
        <h1>List Projects </h1>
        <a href="addProject" class="sideButton"><button>Add project</button></a>

        <!-- card page -->
        <div id="cardPage" class="containerCardPage">

          {{! my project }}
          {{#each myProject_data as |data index|}}
            <div class="card item" id="card">
              <div class="cardInner">
                <a href="/project/{{data.id}}">
                  <img src="{{data.image}}" alt="project image" />
                  <h3 class="font-italic text-purple mb-2">{{data.projectName}}
                    {{author_id}}</h3>
                  <p
                    class="p-duration mb-0 font-italic text-green text-primary"
                    style="margin-bottom: 2px;"
                  >Creator: {{data.name}}</p>
                  <p
                    class="p-duration mt-0 font-italic"
                    style="margin-bottom: 2px;"
                  >Durasi: {{data.timeDuration}}</p>
                  <p
                    class="description font-italic text-orange mb-4"
                  >{{data.description}}</p>

                  <div class="card-icon" id="card-icon">
                    {{{data.elementCardIcon}}}
                  </div>
                </a>

                <div class="card-button-container">
                  <a href="/edit/{{data.id}}">
                    <button>edit</button>
                  </a>
                  <form method="post" action="/delete/{{data.id}}">
                    <button>delete</button>
                  </form>
                </div>

              </div>
            </div>
          {{/each}}

          {{! other project }}
          {{#each otherData as |data index|}}
            <div class="card item" id="card">
              <div class="cardInner">
                <a href="/project/{{data.id}}">
                  <img src="{{data.image}}" alt="project image" />
                  <h3 class="font-italic text-purple mb-2">{{data.projectName}}
                    {{author_id}}</h3>
                  <p
                    class="p-duration mb-0 font-italic text-green text-primary"
                    style="margin-bottom: 2px;"
                  >Creator: {{data.name}}</p>
                  <p
                    class="p-duration mt-0 font-italic"
                    style="margin-bottom: 2px;"
                  >Durasi: {{data.timeDuration}}</p>
                  <p
                    class="description font-italic text-orange mb-4"
                  >{{data.description}}</p>
                  <div class="card-icon" id="card-icon">
                    {{{data.elementCardIcon}}}
                  </div>
                </a>

                <div class="card-button-container">
                </div>
              </div>

            </div>
          {{/each}}
        </div>
      {{else}}
        <h1>List Projects</h1>
        <div id="cardPage" class="containerCardPage">
          {{#each data as |data index|}}

            <div class="card item" id="card">
              <div class="cardInner">
                <a href="/project/{{data.id}}">
                  <img src="{{data.image}}" alt="project image" />
                  <h3 class="font-italic text-purple mb-2">{{data.projectName}}
                    {{author_id}}</h3>
                  <p
                    class="p-duration mb-0 font-italic text-green text-primary"
                    style="margin-bottom: 2px;"
                  >Creator: {{data.name}}</p>
                  <p
                    class="p-duration mt-0 font-italic"
                    style="margin-bottom: 2px;"
                  >Durasi: {{data.timeDuration}}</p>
                  <p
                    class="description font-italic text-orange mb-4"
                  >{{data.description}}</p>
                  <div class="card-icon" id="card-icon">
                    {{{data.elementCardIcon}}}
                  </div>
                </a>
              </div>
            </div>

          {{/each}}
        </div>
      {{/if}}
    </div>

    <script src="assets/js/myProject.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    ></script>
  </body>
</html>