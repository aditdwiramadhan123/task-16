<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- css ex -->
    <link rel="stylesheet" href="../assets/css/sign.css" />
    <link rel="stylesheet" href="../assets/css/navbar.css" />
    <!-- <link rel="stylesheet" href="../assets/css/contact.css"> -->

    <!-- cdn fontawsome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <!-- cdn fontgoogle -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>myPersonal - Website</title>

    <!-- cdn bootstrap -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>

  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-light p-nav">
      <a class="navbar-brand" href="#">
        <img
          src="assets/image/image.png"
          alt="logo-dumbways"
          width="30"
          height="30"
          class="d-inline-block align-top"
        />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active text-black">
            <a class="nav-link font-weight-bold" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link color text-dark" href="project"> My Project</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-dark" href="testimoni">Testimoni</a>
          </li>
        </ul>
        {{#if isLogin}}
          <i class="mr-lg-2 ml-auto fa fa-user"></i>
          <span class="mr-lg-4 font-weight-bold">{{username}}</span>
          <form
            method="post"
            action="/logout"
            class="m-0 p-0 d-inline-block mr-3"
          >
            <button
              type="submit"
              class="btn btn-danger btn-sm m-0 w-100"
            >Logout</button>
          </form>
        {{else}}
          <a href="/login" class="mr-lg-3 ml-auto">Login</a>
        {{/if}}
        <a href="contactMe" class=""><button
            class="btn btn-primary cont w-100 contactMe-button"
          >
            contact me
          </button></a>
      </div>
    </nav>

    <!-- main -->
    <div class="mainContainer">
      <div class="container login" id="login">
        <h1>LOGIN</h1>
        <form action="/login" method="post">
          <div>
            <label for="email">email</label>
            <input type="text" id="email" name="loginEmail" />
          </div>

          <div>
            <label for="password">password</label>
            <input type="password" id="password" name="loginPassword" />
          </div>
          <p class="signup-link mt-3 p-2">
            Don't have an account?
            <span class="signUp" onclick="flip()">Sign Up</span>
          </p>
          <div class="containerButton">
            <button type="submit" onclick="submitHandler()">login</button>
          </div>
        </form>
      </div>

      <div class="container register flipped" id="register">
        <h1>REGISTER</h1>
        <form action="/login" method="post">
          <div>
            <label for="nama">nama</label>
            <input type="text" id="nama" name="registerName" />
          </div>

          <div>
            <label for="email">email</label>
            <input type="text" id="email" name="registerEmail" />
          </div>

          <div>
            <label for="password">password</label>
            <input type="password" id="password" name="registerPassword" />
          </div>

          <p class="signup-link text-lg-left">
            Already have an account?
            <span class="signUp" onclick="flip()">Login</span>
          </p>

          <div class="containerButton">
            <button type="submit" onclick="submitHandler()">sign up</button>
          </div>
        </form>

      </div>
    </div>

    <script src="/assets/js/sign.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    ></script>
  </body>
</html>